<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.project.KazakhActivity$PlaceholderFragment">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView3" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/narynImageView"
        android:src="@drawable/naryn"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ingredients"
        android:textStyle="bold"
        android:id="@+id/narynIngredients"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/narynImageView"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/narynIngredients"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/narynDivider1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="• 1 kg of mutton \n• 4 onions \n• 100 g of fat of tail \n• a tea-spoon of black ground pepper \n• salt to taste\n"
        android:id="@+id/narynIngredientsUnder"
        android:layout_below="@+id/narynDivider1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Directions"
        android:textStyle="bold"
        android:id="@+id/nerynDirections"
        android:layout_below="@+id/narynIngredientsUnder"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/narnyDivider2"
        android:layout_below="@+id/nerynDirections"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1. Dough and force-meat are made like for manly with meat. The dough is rolled in a large thin layer not less than 50 cm in diameter, then it is cut across in 2 or 3 parts on each of which force-meat is put and the edges are stuck together by a pinch. By its peculiar shape orama resembles collared Beef; it is put by one on the kaskan's gratings and steamed for 40–50 minutes.\n2. The ready orama is cut in large pieces and served with broth or sauce."
        android:id="@+id/narynDirectionsUnder"
        android:layout_below="@+id/narnyDivider2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
